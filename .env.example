# Nexus Userbot Configuration Example
# Copy this file to .env and fill in your values

# Required: Telegram API Credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Optional: Session String (recommended for deployment)
# Generate using: python3 -c "from pyrogram import Client; print(Client(':memory:', api_id=API_ID, api_hash='API_HASH').export_session_string())"
SESSION_STRING=your_session_string_here

# Bot Configuration
COMMAND_PREFIX=.
BOT_NAME=Nexus Userbot
BOT_VERSION=2.0

# Security Settings
ENABLE_PROTECTION=true
AUTHORIZED_USERS=
BLACKLISTED_USERS=

# Note: Deployment notifications are automatically sent to the creator
# Users cannot modify notification settings

# Auto-Response Settings
ENABLE_AUTO_RESPONSE=false
AUTO_RESPONSE_MESSAGE=Hi! I am currently using Nexus Userbot. I will respond when available.
AUTO_RESPONSE_DELAY=60

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_COMMAND_LOGGING=true

# Assistant Bot Configuration (Optional - for hybrid mode)
# Get BOT_TOKEN from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
ASSISTANT_NAME=Nexus Assistant
ASSISTANT_BIO=ðŸ¤– Nexus Userbot Assistant | Advanced Telegram Automation | Created by @nexustech_dev
ASSISTANT_DESCRIPTION=Advanced Telegram userbot with AI capabilities, file management, and automation features. Your personal Telegram assistant.
ASSISTANT_PROFILE_PIC=assets/nexus_bot_profile.png
AUTO_UPDATE_BOT_PROFILE=true

# BotFather Automation Settings
AUTO_SETUP_BOTFATHER=true
BOTFATHER_SETUP_DELAY=3
SKIP_BOTFATHER_ON_ERROR=true

# Public Commands Settings
ENABLE_PUBLIC_COMMANDS=false
ALLOWED_PUBLIC_COMMANDS=ping,info,help
PUBLIC_COMMAND_COOLDOWN=5

# Inline Mode Settings
ENABLE_INLINE_MODE=true
INLINE_CACHE_TIME=300

# Log Group Settings
LOG_GROUP_ID=your_log_group_chat_id
ENABLE_LOG_GROUP=false
LOG_ALL_COMMANDS=true
LOG_ERRORS=true
LOG_USER_ACTIVITY=false

# Advanced Settings
MAX_MESSAGE_LENGTH=4096
RATE_LIMIT_DELAY=1.0
FLOOD_PROTECTION=true